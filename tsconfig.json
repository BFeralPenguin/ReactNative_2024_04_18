{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@types": [
        "app/types"
      ],
      "@assets": [
        "app/assets"
      ],
      "@components/*": [
        "app/ui/components/*"
      ],
      "@screens/*": [
        "app/ui/screens/*"
      ],
      "@theme": [
        "app/ui/theme"
      ],
      "@strings": [
        "app/strings"
      ],
      "@mocks": [
        "app/mocks"
      ]
    }
  }
}